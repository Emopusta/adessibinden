{
  "Serilog": {
    "LevelSwitches": {
      "$controlSwitch": "Debug"
    },
    "MinimumLevel": {
      "ControlledBy": "$controlSwitch"
    },
    "WriteTo": [
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "Adessibinden",
          "tableName": "logs",
          "schemaName": null,
          "needAutoCreateTable": true,
          "loggerColumnOptions": {
            "Id": {
              "Name": "IdAutoIncrement"
            },
            "Message": {
              "Name": "Message"
            },
            "Level": {
              "Name": "LevelAsText"
            },
            "TimeStamp": {
              "Name": "Timestamp"
            },
            "Exception": {
              "Name": "Exception"
            },
            "LogEvent": {
              "Name": "Properties"
            }
          },
          "loggerPropertyColumnOptions": {
            "TestColumnName": {
              "Format": "{0}",
              "Name": "Message",
              "WriteMethod": "Raw",
              "DbType": "Text"
            }
          },
          "period": "0.00:00:30",
          "batchSizeLimit": 50
        }
    }
    ]
  },

  "EmopLogging": {
    "Filter": {
      "FilteredLayers": [
        "Core.EventBus"
      ]
    }
  },

  "GrafanaLoki": {
    "Enabled" :  true,
    "URL": "http://localhost:3100",
    "Labels": {
      "app": "Adessibinden"
    },
    "MinimumLevel": "Information"
  },


  "ConnectionStrings": {
    "Adessibinden": "Host=adessibinden_db;Database=adessibindenDockerDb;Port=5432;Username=<YOUR USERNAME>;Password=<YOUR PASSWORD>;Include Error Detail=true"
  },

  "AllowedHosts": "*",

  "TokenOptions": {
    "AccessTokenExpiration": 10,
    "Audience": "emopusta.com@emopusta.com",
    "Issuer": "emopusta@emopusta.com",
    "RefreshTokenTTL": 2,
    "SecurityKey": "strongandsecretkeystrongandsecretkeyamabayastrongamadahafazlastrongolmasilazimoyuzdendahastrong"
  },
  
  "WebAPIConfiguration": {
    "APIDomain": "http://localhost:5174/api",
    "AllowedOrigins": [
      "http://localhost:4200",
      "https://localhost:44342",
      "http://localhost:8080",
      "https://localhost:7023"
    ]
  }
}
